---
import AgeTooltip from "@/components/react/ageTip";
import {
  DiscordIcon,
  EmailIcon,
  GithubIcon,
  LinkedinIcon,
} from "@/components/react/icons";
import {
  DecoratedHeading,
  VintageHighlight,
} from "@/components/react/vintageHighlight";
import {
  formatDate,
  projects,
  socialLinks,
  workExperience,
} from "@/data/portfolio";
import Layout from "../layouts/Layout.astro";

// Filtrar proyectos con blog posts
const blogPosts = projects.filter((project) => project.blogUrl);
---

<Layout title="Inicio">
  <main class="bg-background text-foreground min-h-screen py-12">
    <div class="container mx-auto px-4 max-w-4xl">
      <!-- Hero Section with About -->
      <div class="grid md:grid-cols-[2fr,1fr] gap-6 mb-12 hero-section">
        <header class="bg-card p-8 rounded-lg border border-border shadow-md">
          <h1 class="text-4xl font-semibold mb-4 text-primary">
            Valentin Marquez
          </h1>
          <p class="text-lg mb-6">
            Software Engineer based in Santiago, Chile, specializing in modern
            web development.
            <AgeTooltip client:only="react" /> with proven expertise in
            <VintageHighlight type="underline" client:only="react">
              front-end architecture
            </VintageHighlight>
            and cutting-edge web technologies. Passionate about creating efficient,
            user-centric solutions.
          </p>

          <div class="flex flex-row gap-4">
            {
              socialLinks.map((link) => (
                <a
                  href={link.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`Visit ${link.name} profile`}
                  class=" text-sm text-muted-foreground hover:text-accent transition-colors duration-200 p-2 rounded-lg hover:bg-muted focus:outline-none focus:ring-2 focus:ring-primary"
                >
                  <span class="flex items-center gap-2">
                    {link.name === "github" && <GithubIcon />}
                    {link.name === "linkedin" && <LinkedinIcon />}
                    {link.name === "discord" && <DiscordIcon />}
                    {link.name === "email" && <EmailIcon />}
                    {link.name.charAt(0).toUpperCase() + link.name.slice(1)}
                  </span>
                </a>
              ))
            }
          </div>
        </header>

        <div class="bg-card p-8 rounded-lg border border-border shadow-md">
          <h2 class="text-xl text-primary mb-4">Current Focus</h2>
          <p class="text-lg">
            Actively seeking new opportunities while deepening expertise in
            <VintageHighlight client:only="react" type="mark"
              >Machine Learning</VintageHighlight
            > and
            <VintageHighlight client:only="react" type="mark"
              >Data Analytics</VintageHighlight
            >. Driven by continuous learning and innovation.
          </p>
        </div>
      </div>

      <!-- Work Experience Section -->
      <section
        class="mb-12 bg-card p-8 rounded-lg border border-border shadow-md"
      >
        <h2 class="text-2xl text-primary mb-8">
          <DecoratedHeading client:only="react"
            >Work Experience</DecoratedHeading
          >
        </h2>
        <div class="space-y-8">
          {
            workExperience.map((item) => (
              <div class="grid md:grid-cols-[1fr,auto] gap-6 pb-8 border-b border-border last:pb-0 last:border-0">
                <div>
                  <h3 class=" text-xl mb-2">{item.company}</h3>
                  <p class=" text-accent text-lg">{item.role}</p>
                  <p class=" text-sm text-muted-foreground mt-2">
                    {item.period}
                  </p>
                  <p class=" text-muted-foreground mt-4 max-w-2xl">
                    {item.description}
                  </p>
                </div>
                <span class=" text-sm text-primary px-4 py-2 bg-muted rounded-full h-fit">
                  {item.type}
                </span>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Projects and Blog Grid -->
      <div class="grid md:grid-cols-2 gap-6 projects-grid">
        <!-- Featured Projects Section -->
        <section class="bg-card p-8 rounded-lg border border-border shadow-md">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl text-primary">Featured Projects</h2>
            <a
              href="/projects"
              class="px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors duration-200 text-sm"
            >
              Ver todos
            </a>
          </div>
          <div class="space-y-6">
            {
              projects
                .filter((p) => !p.isArchived && !p.isComingSoon)
                .slice(0, 4)
                .map((project) => (
                  <div class="border-b border-border pb-4 last:border-0 last:pb-0">
                    <a
                      href={project.link}
                      target="_blank"
                      rel="noopener noreferrer"
                      class=" text-lg hover:text-accent transition-colors duration-200 block p-2 rounded-lg hover:bg-muted/50"
                    >
                      <div class="flex justify-between items-start mb-2">
                        <div class="flex-1">
                          <h4 class=" text-lg hover:text-accent transition-colors duration-200 block">
                            {project.title}
                            {project.isComingSoon && (
                              <span class="ml-2 text-sm text-accent">
                                (Coming Soon)
                              </span>
                            )}
                          </h4>
                          {project.startDate && (
                            <span class="text-sm text-muted-foreground block mt-1">
                              {formatDate(project.startDate)}
                            </span>
                          )}
                          <p class="text-sm text-muted-foreground mt-2">
                            {project.description}
                          </p>
                        </div>
                      </div>
                      <div class="flex flex-wrap gap-2 mt-2">
                        {project.techs.map((tech) => (
                          <span class="text-xs px-2 py-1 bg-muted rounded-full text-muted-foreground">
                            {tech}
                          </span>
                        ))}
                      </div>
                    </a>
                  </div>
                ))
            }
          </div>
        </section>

        <!-- Blog Posts Section -->
        <section class="bg-card p-8 rounded-lg border border-border shadow-md">
          <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl text-primary">Latest Posts</h2>
            <a
              href="/blog"
              class="px-4 py-2 bg-primary text-primary-foreground rounded-lg hover:bg-primary/90 transition-colors duration-200 text-sm"
            >
              Ver blog
            </a>
          </div>
          <div class="space-y-6">
            {
              blogPosts.slice(0, 4).map((project) => (
                <div class="border-b border-border pb-4 last:border-0 last:pb-0">
                  <a href={project.blogUrl}>
                    <div class="flex justify-between items-start mb-2">
                      <div class="flex-1">
                        <h4 class=" text-lg hover:text-accent transition-colors duration-200 block">
                          {project.title}
                        </h4>
                        {project.startDate && (
                          <span class="text-sm text-muted-foreground block mt-1">
                            {formatDate(project.startDate)}
                          </span>
                        )}
                      </div>
                    </div>
                    <div class="flex flex-wrap gap-2 mt-2">
                      {project.techs.map((tech) => (
                        <span class="text-xs px-2 py-1 bg-muted rounded-full text-muted-foreground">
                          {tech}
                        </span>
                      ))}
                    </div>
                  </a>
                </div>
              ))
            }
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>
